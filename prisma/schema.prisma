// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id              String      @id @default(cuid())
  name            String
  email           String
  phone           String?
  company         String?
  contactTitle    String?
  status          LeadStatus  @default(NEW)
  source          String?
  sourceType      SourceType?
  industry        Industry?
  buyerRole       BuyerRole?
  intentScore     Int?        @default(0)
  signalTrail     String?     // JSON array of signal strings
  aiInsight       String?
  notes           String?
  lastSyncedAt    DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([status])
  @@index([email])
  @@index([intentScore])
  @@index([sourceType])
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL
  NEGOTIATION
  WON
  LOST
}

enum SourceType {
  TRIAL
  WEBINAR
  CAMPAIGN_DOWNLOAD
  SQL
  CAMPAIGN_EMAIL
}

enum Industry {
  RETAIL
  HEALTHCARE
  FINANCE
  EDUCATION
  LOGISTICS
  OTHER
}

enum BuyerRole {
  IT_ADMIN
  FINANCE_HEAD
  PROCUREMENT
  CEO
  OTHER
}
